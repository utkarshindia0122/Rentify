<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit House</h1>
    <div class="col-6 offset-3">
        <form action="/houses/<%=house._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="house[title]"
                    value="<%=house.title %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="house[location]"
                    value="<%=house.location %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Add Images</label>
                <div class="input-group mb-3">
                    <input type="file" name="image"class="form-control" id="inputGroupFile" multiple>
                    <label class="input-group-text" for="inputGroupFile">Upload</label>
                  </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">House Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="house[price]" value="<%=house.price %>" required>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description"
                    name="house[description]" required><%= house.description%></textarea>
            </div>
            <div class="mb-3">
                <%house.images.forEach(function(img,i){%>
                    <label for="image-<%=i%>">
                   <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="" >
                    </label>
                   <div class="form-check-inline">
                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                   </div>
                   <label for="image-<%=i%>">Delete ?</label>
                 <%})%>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update House</button>
            </div>
        </form>
        <a href="/houses/<%= house._id%>">Back To House</a>

    </div>
</div>